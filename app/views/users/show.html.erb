<% content_for :head do %>
	<title>BFF::Home</title>
<% end %>

<%= content_for :page_title do %>
	<% if isAdmin? or @curr == @user %>
		<%= @curr.login%>
	<% else %>
		Invalid
	<% end %>
<% end %>

<% content_for :content do %>
	<% if isAdmin? or @curr == @user %>
		<table>
			<tr>
				<th align="left">User name:</th>
				<td align="left"> <%= @curr.login %> </td>
			</tr>
			<tr>
				<th align="left"> Email:</th>
				<td align="left"> <%= @curr.email %> </td>
			</tr>
		<% if isAdmin? %>
			<tr>
		
				<th align="left">Admin Status:</th>
				<td align="left"> <%= @curr.admin %> </td>
			</tr>
		<% end %>
			<tr>
				<th align="left"> <%= link_to 'Edit', edit_user_path(@curr) %></th>
			</tr>
		</table>	
	<% else %>
		All profiles are private.  Please use facebook if you want to view random peoples profiles.  To view your profile please click this link:
		<%= link_to "Profile", user_path(@user)%>
	<% end %>
<% end %>
