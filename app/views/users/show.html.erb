<% content_for :head do %>
	<title>TAB::Home</title>
	<%= javascript_include_tag :home %>
<% end %>

<% content_for :header do %>
	<a href="index.html"><img id="" src="" alt="" /></a>
	<%= render "layouts/login" %>
<% end %>


<% content_for :content do %>
	<table>
	<tr>
		<th align="left">User name:</th>
		<td align="left"> <%= current_user.login %> </td>
	</tr>
	<tr>
		<th align="left"> Email:</th>
		<td align="left"> <%= current_user.email %> </td>
	</tr>
	</table>
	<% if isAdmin? %>
		<table>
		<tr>
	
			<th align="left">Admin Status:</th>
			<td align="left"> <%= current_user.admin %> </td>
		</tr>
		</table>
	<% end %>


	<%= form_tag :action => 'set_admin', :method => "post", :controller => "users" %>
		<div>
			<table>
				<tr>
	          		<td> <%= check_box_tag("admin", set_admin(current_user), current_user.admin) %> </td>
	          		<td> <%= "Admin" %> </td>
	        	</tr>
        	</table>
		</div>
		
		<%= submit_tag "Set" %>
	<%= %>
	
	<% if isAdmin? %>
	<h1>Listing users</h1>
	  <% @users.each do |usr| %>
	    <%= usr.login %>
	    <%= usr.email %>
	    <%= link_to 'Show', usr %>
	    <%= link_to 'Edit', edit_user_path(usr) %>
	    <%= link_to 'Destroy', usr, confirm: 'Are you sure?', method: :delete %>
	  <% end %>
	<% end %>
	
	</table>
<% end %>
