<% content_for :head do %>
	<title>BFF::Forgot Password</title>
<% end %>

<% content_for :page_title do %>
	Forgot Password
<% end %>

<% content_for :content do %>
	<%= form_tag({:action => 'forgot_password', :controller => "users"}, {:id => "form"}) do%>
		<label for="user_email">Enter your email:</label> <%= text_field "user","email" %>
		
		<br/><br />
	
		<%= submit_tag 'Email Me', :id => 'submit' %>
	<% end %>
<% end %>
