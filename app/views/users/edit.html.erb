<% content_for :head do %>
	<title>TAB::Home</title>
	<%= javascript_include_tag :home %>
<% end %>

<% content_for :header do %>
	<a href='index.html'><img id='' src='' alt='' /></a>
	<%= render 'layouts/login' %>
<% end %>

<%= content_for :headline do %>
	<div id='headline'>
		<span class="main">Editing: <%= @curr.login%></span>
	</div>
<% end %>

<% content_for :content do%>


	<!--<%= link_to "Change Password", root_url + "users/change_password"%>-->


	<%= form_tag( {:action => 'update', :controller => 'users'}, {:method => 'put'} ) do%>
		
		<label for='user_email'>Email</label><br/>
		<%= text_field 'user', 'email',  :size => 20, :value => @curr.email %><br/>
		
		<label for='user_email_confirmation'>Email Confirmation</label><br/>
		<%= text_field 'user', 'email_confirmation', :size => 20, :value => @curr.email %><br/>
		
		<label for='user_set_admin'>Set Admin</label><br/>
		<%= check_box 'user', 'admin', :value => @curr.admin%><br/>

		<%= submit_tag 'Update' %>
	<% end %>

<% end %>
