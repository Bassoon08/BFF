<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name='TAB' content="Fill me in!" />
		<%= stylesheet_link_tag 'application', :media => 'all' %>
		<%= yield :head %>
	    <!--[if lt IE 9]>
	  		<script src="//html5shim.googlecode.com/sin/trunk/html5.js"></script>
		<![endif]-->
		<%= csrf_meta_tags %>
	</head>

	<body>
		<div id="header">
			<%= image_tag "other/logo.png", :alt => "Bassoon Fingering Finder"%>
			<%= render "layouts/login" %>
		</div>
		<div id="menu">
			<%= render "layouts/menu" %>
		</div>
		<div id="main">
			<div class="wrapper">
				<div id="content">
					<div id="page-title">
						<span class="title"><%= yield :page_title %></span>
						<span class="subtitle"><%= yield :page_subtitle %></span>
					</div>
					<div id="page-content">
						<%= yield :content %>
					</div>
				</div>
			</div>
		</div>
		<div id="footer">
			<%= render "layouts/footer" %>
		</div>
		<div id="bottom">
			<div class="wrapper">
				<%= render "layouts/bottom" %>
			</div>
		</div>
	</body>
</html>
