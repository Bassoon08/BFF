<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name='TAB' content="Fill me in!" />
		<%= stylesheet_link_tag 'application', :media => 'all' %>
		<%= stylesheet_link_tag 'mobile' if mobile_device? %>
		<%= yield :head %>
	    <!--[if lt IE 9]>
	  		<script src="//html5shim.googlecode.com/sin/trunk/html5.js"></script>
		<![endif]-->
		<%= csrf_meta_tags %>
	</head>

	<body class="home" <%= yield :onactions %>>
		<div id="header">
			<div class="wrapper">
				<%= yield :header %>
			</div>
		</div>
		<%= render "layouts/menu" %>
		<div id="main">
			<div class="wrapper">
				<div class="clear"></div>
					<%= yield :headline %>
					<div id="content">
						<%= yield :content %>
					</div>
			</div>
		</div>
		<%= render "layouts/footer" %>
		<%= render "layouts/bottom" %>
	</body>
</html>
