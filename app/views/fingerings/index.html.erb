<% content_for :head do %>
	<title>BFF::Fingerings</title>
	<%= javascript_include_tag 'jquery', 'fingerings' %>
<% end %>

<% content_for :header do %>
	<a href="index.html"><img id="" src="" alt="" /></a>
	<%= render "layouts/login" %>
<% end %>

<%= content_for :headline do %>
	<div id="headline">
		<span class="main">Fingerings</span>
	</div>
<% end %>

<% content_for :content do %>
	<table border="1">
		<tr>
			<th>Note</th>
			<th>Key Status</th>
			<th>Votes - Beginner</th>
			<th>Votes - Intermeditate</th>
			<th>Votes - Advanced</th>
			<th>Votes - Professional</th>
			<th>Submitted by</th>
			<th>Submitted on</th>
			<th>Approval Status</th>
			<th>Show</th>
			<th>Edit</th>
			<th>Destroy</th>
		</tr>
		<% @fingerings.each do |fingering| %>
			<tr>
			    <td><%= fingering.note_tone %></td>
			    <td><%= fingering.fingering_status %></td>
			    <td><%= fingering.votes_beginner %></td>
		    	<td><%= fingering.votes_intermediate %></td>
	    		<td><%= fingering.votes_advanced %></td>
	    		<td><%= fingering.votes_professional %></td>
			    <td><%= fingering.user_id %></td>
			    <td><%= fingering.created_at %></td>
			    <td><%= fingering.approved %></td>
			    <td><%= link_to 'Show', fingering %></td>
			    <td><%= link_to 'Edit', edit_fingering_path(fingering) %></td>
			    <td><%= link_to 'Destroy', fingering, confirm: 'Are you sure?', method: :delete %></td>
			</tr>
		<% end %>
	</table>
	
	<br />
	
	<%= link_to 'New Fingering', new_fingering_path %>
<% end %>
